
@model SeguridadAspMvc.Models.ClientesListadoModel
@{ViewData["Title"] = "Listado de Clientes"; }

<h1 class="modal-title">@ViewData["Title"]</h1>

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["mensaje"]

        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<form asp-action="Listado" method="get">

    <div class="row">
        <div class="form-group col-12">

            <label class="control-label">Nombre:</label>
            <input name="valor" type="text" class="form-group col-4" />
            <input type="submit" value="Buscar" class="btn btn-primary" />

            <a class="btn btn-primary float-right" asp-area="" asp-controller="Clientes" asp-action="Create">Nuevo Cliente</a>

        </div>
    </div>
</form>


<div class="row">

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Cuit</th>
                <th>Usuario Creacion</th>
                <th>Fecha Creacion</th>

                <th>Usuario Modificacion</th>
                <th>Fecha Modificacion</th>
                <th>Opciones</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model.Listado)
            {

                <tr>
                    <td>@cliente.ClienteId</td>
                    <td>@cliente.Nombre</td>
                    <td>@cliente.Direccion</td>

                    <td>@cliente.Telefono</td>

                    <td>@cliente.Cuit</td>
                    <td>@cliente.CreadoPor</td>
                    <td>@cliente.FechaCreacion</td>

                    <td>@cliente.ModificadoPor</td>
                    <td>@cliente.FechaModificacion</td>



                    <td>
                        <a class="btn btn-warning " asp-area="" asp-controller="Clientes" asp-action="Edit" asp-route-id="@cliente.ClienteId">Editar</a>
                        <a class="btn btn-danger " asp-area="" asp-controller="Clientes" asp-action="Delete" asp-route-id="@cliente.ClienteId">Eliminar</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>



</div>
