@model WebAppProemMvc1.Models.FacturasListadoModels

@{ViewData["Title"] = "Listado de Facturas"; }

<h1 class="modal-title">@ViewData["Title"]</h1>

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        @TempData["mensaje"]

        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="row table-striped">
    <form asp-action="Index" method="get" class="form-group col-10">
        <div>
            <label class="control-label">Nombre:</label>
            <input name="valor" type="text" class="form-group col-4" />
            <input type="submit" value="Buscar" class="btn btn-primary" />
        </div>
    </form>
    <a class="btn btn-primary form-group" asp-area="" asp-controller="Facturas" asp-action="Create" asp-route-id="0">Nueva Factura</a>


</div>


<table class="table-bordered table table-striped text-center">
    <thead>
        <tr>
            <th>Cliente</th>
            <th>Factura</th>
            <th>Fecha</th>
            <th>Importe</th>
            <th>Saldo</th>
            <th>Opciones</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var factura in ViewBag.ListaFacturas)
        {

            <tr>
                <td>@factura.Cliente.Nombre</td>
                <td>@factura.FacturaId</td>
                <td>@factura.Fecha</td>

                <td>@factura.Importe</td>

                <td>@factura.Saldo</td>


                <td>
                    <a class="btn btn-warning " asp-area="" asp-controller="Facturas" asp-action="Edit" asp-route-id="@factura.FacturaId">Editar</a>
                    <a class="btn btn-danger " asp-area="" asp-controller="Facturas" asp-action="Delete" asp-route-id="@factura.FacturaId">Eliminar</a>
                </td>

            </tr>
        }
    </tbody>
</table>