
@model WebAppProemMvc1.Models.ClientesListadoModel
    @{ViewData["Title"] = "Listado de Clientes"; }

    <h1 class="modal-title">@ViewData["Title"]</h1>

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]

            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
        <div class="row table-striped">
            <form asp-action="Listado" method="get" class="form-group col-10">
                <div>
                    <label class="control-label">Nombre:</label>
                    <input name="valor" type="text" class="form-group col-4" />
                    <input type="submit" value="Buscar" class="btn btn-primary" />
                </div>
            </form>
            <a class="btn btn-primary form-group" asp-area="" asp-controller="Clientes" asp-action="Create" asp-route-id="0">Nuevo Cliente</a>


        </div>
    <table class="table-bordered table table-striped text-center">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Cuit</th>
                <th>Opciones</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model.Listado)
            {

                <tr>
                    <td>@cliente.ClienteId</td>
                    <td>@cliente.Nombre</td>
                    <td>@cliente.Direccion</td>

                    <td>@cliente.Telefono</td>

                    <td>@cliente.Cuit</td>


                    <td>
                        <a class="btn btn-warning " asp-area="" asp-controller="Clientes" asp-action="Edit" asp-route-id="@cliente.ClienteId">Editar</a>
                        <a class="btn btn-danger " asp-area="" asp-controller="Clientes" asp-action="Delete" asp-route-id="@cliente.ClienteId">Eliminar</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>


