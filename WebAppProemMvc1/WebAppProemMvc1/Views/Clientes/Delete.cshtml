

@model WebAppProemMvc1.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>Eliminar Cliente</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="DeleteCliente" method="post" class="container" >

                <input type="hidden" asp-for="ClienteId" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ClienteId" class="control-label"></label>
                    <input asp-for="ClienteId" class="form-control" readonly/>
                    <span asp-validation-for="ClienteId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" readonly />
                    <span asp-validation-for="Nombre" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Direccion" class="control-label"></label>
                    <input asp-for="Direccion" class="form-control"  readonly/>
                    <span asp-validation-for="Direccion" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label"></label>
                    <input asp-for="Telefono" class="form-control" readonly/>
                    <span asp-validation-for="Telefono" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="Cuit" class="control-label"></label>
                    <input asp-for="Cuit" class="form-control" readonly/>
                    <span asp-validation-for="Cuit" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <input type="submit" value="Eliminar Cliente" class="btn btn-primary flex-column" />
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

